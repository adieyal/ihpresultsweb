/*
Theme Name: IHP+ Results
Theme URI: http://www.aptivate.org
Description: A custom theme for IPH + Results - based on Dojo by Scott Vandehey. 
A minimal, web-standards, SEO-friendly theme with two dynamic sidebars and an editable "about" blurb.
Version: 1
Author: Aptivate
Author URI: http://www.aptivate.org
Tags: fixed-width, three-columns, right-sidebar, white, theme-options, threaded-comments

/* Universal Rules -------------------------------------------------- */
body {
	margin: 0;
	padding: 0;
	background: #fff;
	color: #333;
	/* font sizing in ems, baby. if you want to change anything, just change this.*/
	font: 80%/1.5 Arial, "Helvetica Neue", Helvetica, sans-serif;
}
.ahem, hr { display: none !important; }
img { border: none; }
form { margin: 0; }
.floatleft, .alignleft { float: left; margin: 0 1em 1em 0; }
.floatright, .alignright { float: right; margin: 0 0 1em 1em; }
.aligncenter { display: block; margin-left: auto; margin-right: auto; }
.clearboth { clear: both; }

/* Layout -------------------------------------------------- */

#header, #access, #wrapper, #footer {
	clear:both;
	width:100%;
	position:relative;
	display:block;
	float:left;
	padding:0;
	margin:0;
}

#branding, #access-inner, #wrapper-inner, #footer-inner {
	width:960px;
	margin:0 auto;
	position:relative;
	display:block;
	position:relative;
}

#header {
	display:block;
	float:left;
	position:relative;
	padding-top:20px;
	background-image:url(images/header-bg.png);
	background-repeat:no-repeat;
	background-position:top;
}


#access {
	margin-top:10px;
	text-align:left;
	text-transform:lowercase;
}

#wrapper {
	padding-top: 20px;
	float: left;

}
#sidebar {
	width: 310px;
	float: right;
	padding: 0 0 0 20px;
}

#content {
	float:left;
	margin-bottom:20px;
	padding:0;
	width:590px;
}




#footer {
	clear: both;
}

#actions {
	float:left;
	position:relative;
	display:block;
}

/* Header -------------------------------------------------- */

#header #blogname a, #header h1 a {
	line-height: 1;
	display: block;
	float: left;
	height: 85px;
	width: 200px;
	margin:0;
	position: relative;
	background-image:url(images/ihpresults-logo.png);
	background-repeat:no-repeat;
	text-indent:-9999px;
	font-size:2.5em;
	padding:0;
}

#blogname p, h1 .blogname {
	margin:0;
	line-height:0;
}

#header #tagline {
	display:none;
}



/* Navigation -------------------------------------------------- */

#access .skip-link {
	display:none;
}

#access {
	border-bottom:6px solid #F68B1F;
}
#access .menu-header,
div.menu {
	font-size: 13px;
	float:left;
}
#access .menu-header ul,
div.menu ul {
	list-style: none;
	margin: 0;
}
#access .menu-header li,
div.menu li {
	float: left;
	position: relative;
}
#access a {
	color:#333;
	display:block;
	font-size:1.3em;
	font-weight:bold;
	line-height:38px;
	padding-bottom:0;
	padding-left:0;
	padding-right:20px;
	padding-top:0;
	text-decoration:none;
}
#access ul ul {
	display: none;
	position: absolute;
	top: 38px;
	left: 0;
	float: left;
	width: 180px;
	z-index: 99999;
}
#access ul ul li {
	min-width: 180px;
}
#access ul ul ul {
	left: 100%;
	top: 0;
}
#access ul ul a {
	background: #D1DDD9;
	line-height: 1em;
	padding: 5px;
	width: 160px;
	height: auto;
}
#access li:hover > a {
	background: #fff;
	color: #F68B1F;
}

#access ul ul :hover > a {
	background: #668D82;
	color: #fff;
}


#access ul li:hover > ul {
	display: block;
}
#access ul li.current_page_item > a,
#access ul li.current-menu-ancestor > a,
#access ul li.current-menu-item > a,
#access ul li.current-menu-parent > a {
	color: #F68B1F;
}
* html #access ul li.current_page_item a,
* html #access ul li.current-menu-ancestor a,
* html #access ul li.current-menu-item a,
* html #access ul li.current-menu-parent a,
* html #access ul li a:hover {
	color: #fff;
}





/* Content -------------------------------------------------- */
.entry {
	margin-bottom: 2em;
	width:590px;
	float:left;
}
.alert,
.error {
	background: #ffc;
	border: 1px solid #ff0;
	border-width: 1px 0;
	margin: 1em 0;
	padding: 1em;
}
code, kbd, tt, pre {
	font-family: Consolas, "Lucida Console", Monaco, monospace;
	background: transparent url("images/bg-sidebar-five-percent.png") top right;
}
code {
}
pre {
	background: transparent url("images/bg-sidebar-five-percent.png") top right;
	padding: .5em;
}
a, a:link, a:visited {
	color: #F68B1F;
	text-decoration: none;
	outline:none;
	outline-style:none;
}
a:hover, a:active {
	color: #F68B1F;
}

p >a:link {
text-decoration:underline;
}
sup { /* to prevent gaps in paragraph layouts, we'll switch back to regular v-align and shunt it up with pos:rel */
	vertical-align: baseline;
	position: relative;
	bottom: .33em;
}
acronym, abbr, .info {
	border-bottom: 1px dotted #333;
	cursor: help;
}
h1, h2 ,h3, h4 {
	font-family: Calibri, Arial, "Helvetica Neue", Helvetica, sans-serif;
	line-height: 1.25;
	margin: 0 0 0.7em;
	color:#0E3D3D;
}
h1 {
	font-size: 2.5em;
	color:#0E3D3D;
}
h1.archive {
	margin-bottom: .5em;
}
h2 {
	font-size: 2em;
}
h3 {
	font-size: 1.75em;
	padding-bottom:0.3em;
	padding-top:0.2em;
	margin-bottom:0.5em;
	border-bottom:2px dotted #0E3D3D;
	font-weight:normal;
}

h4 {
	font-size: 1.5em;
}
h5, h6 {
	font-size: 1.25em;
}

p, ul, ol, table, .navigation {
	margin: .25em 0 1em;
}
th, td {
	padding: .5em .66em;
	line-height: 1.1;
	vertical-align: top;
	border-bottom: 1px solid #ddd;
}
th {
	text-align: left;
	vertical-align: bottom;
}

.metadata {
clear:both;
border-top:1px solid #eee;
color:#999;
}
.metadata .byline {
	margin-bottom: .75em;
}

.metadata a, .metadata:active {
color:#666;}
ul, ol {
	margin-left: 0;
	padding-left: 0;
}
ul ul,
ol ol {
	margin: 0;
}
li {
	margin:0 0.5em 0 0;
	padding-left: 0;
}
ul li {
	list-style-type: none;
}
ol li {
	margin-left: 1.5em;
}
ul.rss li {
	list-style: none;
	margin-left: 0;
	padding-left: 17px;
	background: transparent url("images/feed.gif") no-repeat left .25em;
}
.wp-caption {
	margin: .25em auto 1em;
}
.entry img,
.entry object {
	display: block;
	background: #fff;
	padding: 4px;
	border: 1px solid #eee;
	border-right: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
	margin: .25em auto 1em;
	max-width: 500px;
}
.wp-caption img {
	margin: 0 auto;
}
.wp-caption p.wp-caption-text {
	font-size: .9em;
	margin: .25em 0 0;
	text-align: center;
	color: #666;
}
.entry .thumbrow {
	text-align: center;
}
.entry .thumbrow img {
	display: inline;
	margin: 0 .5em;
}
.entry .thumbrow a {
	border: none;
}
.entry .floatright img,
.entry .floatleft img {
	margin: .25em 0 1em;
}
.entry img.floatright,
.entry img.alignright,
.entry img[align="right"],
.wp-caption.alignright {
	margin: .25em 0 1em 1em;
}
.entry img.floatleft,
.entry img.alignleft,
.entry img[align="left"],
.wp-caption.alignleft {
	margin: .25em 1em 1em 0;
}
.entry p,
.entry li,
#columncap p {
	text-align: left;
}

a.post-title {
	font-weight:bold;
	font-size:1.2em;
	text-decoration:underline;
}

#content .cat-post-item {
	border-bottom:1px solid #eee;
}

.archive #content .post {
	border-bottom:1px solid #eee;
	margin-bottom:15px;
	padding-bottom:10px;
}

.archive #content .post a img {
	display:block;
	float:left;
	margin-right:20px;
}


.archive #content .post h2 {
	clear:none;
}

.archive #content .metadata {
	display:none;
}

#site-archives-monthly-archive {
	width: 60%;
	float: left;
}
#site-archives-monthly-archive.wide {
	width: auto;
	float: none;
}
#site-archives-monthly-archive li,
#site-links li {
	text-align: left;
}
#site-archives-category-archive {
	width: 37%;
	float: right;
}
#site-links img {
	margin-left: 0;
	margin-right: 0;
}
blockquote {
	margin: .25em 0 1em;
	padding: .75em 1em .25em;
	border-left: 2px solid #ccc;
	background: transparent url("images/bg-sidebar-five-percent.png") top right;
	font-style: italic;
}
blockquote i,
blockquote em,
blockquote cite {
	font-style: normal;
}
blockquote p {
	margin: 0 0 .5em;
}
.navigation {
	padding-top: .25em;
	width: 100%;
	float: left;
}
.navigation .prev {
	float: left;
	width: 50%;
}
.navigation .next {
	float: right;
	width: 50%;
	text-align: right;
}

.go {
	background-image:url(images/bullet-go-arrow-pink.png);
	background-repeat:no-repeat;
	display:block;
	padding-bottom:5px;
	padding-left:30px;
	font-weight:bold;
	float:left;
}

/* Homepage -------------------------------------------------- */

.home #header {
	background-image:none;
}

.home #wrapper {
	padding-top:0;
}

.home #wrapper-inner {
	width:100%;
	margin:0;
}

.home #content {
	width:100%;
	background-color:#F68B1F;
	display:block;
	position:relative;
}
	

.home .section{
	float:none;
	width:960px;
	margin:0 auto;
	clear:both;
	position:relative;
}


.home #intro{
	float:left;
	display:block;
	color:#493939;
	font-size:1.2em;
	width:315px;
	font-weight:bold;
	font-family:Calibri, "Trebuchet MS", Verdana, arial, "sans serif";
	line-height:1.2em;
	margin-bottom:0;
	padding-bottom:10px;
	margin-right:10px;
}

.home #intro h2 {
	color:#fff;
	font-size:1.5em;
	font-weight:normal;
}

.home #intro .button {
	background-color:#fff;
	color:#0E3D3D;
}

.home .featured-content {
	display:block;
	float:left;
	width:630px;
	position:relative;
}

.home .featured-content img.image-1 {
	position:absolute;
	left:0;
	top:-10px;
	z-index:5;
}

.home .featured-content img.image-2 {
	left:264px;
	top:-157px;
	position:absolute;
}

/* Scorecard pages -------------------------------------------------- */

.page-template-page-no-sidebar-php #content, .page-template-page-no-sidebar-php #content .entry {
width:100%;
}


.content ul {
	display:block;
	float:left;
	padding-right:20px;
	font-weight:bold;
}



/* Comments -------------------------------------------------- */
.comments,
.commentlist,
.nocomments,
.related {
	margin-bottom: 2em;
	width:590px;
	float:left;
}
.related {
	clear: both;
}
.commentlist cite {
	font-style: normal;
}
.commentlist li {
	clear: both;
	margin: 0;
	padding: .75em 1em .25em;
	list-style: none;
	background: #fff;
}
.commentlist li li {
	border-left: 2px solid #ccc;
	margin: 0 -1em 0 .5em;
}
.commentlist .even {
	background: #eee;
}
.commentlist .bypostauthor {
	background: #ddd;
}
.commentlist .avatar {
	float: right;
	margin: 0 0 .5em .5em;
	background: #fff;
	padding: 4px;
	border: 1px solid #eee;
	border-right: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
}
#cancel-comment-reply-link {
	margin-left: 3em;
}
.trackback,
.pingback {
	font-size: .85em;
	color: #666;
}
.trackback .content,
.pingback .content {
	font-style: italic;
}

/* Sidebar -------------------------------------------------- */

#sidebar .widget {
	clear: both;
	margin-bottom: 1em;
	padding:10px;
	border:1px solid #D1DDD9;
	-moz-border-radius:15px;
	-webkit-border-radius:15px;
	border-radius:15px;
}

#sidebar .sociable {
	display:none;
}
#sidebar h2 {
	margin-top: 0;
	background-color:#0E3D3D;
	padding:1px 15px 3px 15px;
	color:#fff;
	text-transform:uppercase;
	font-size:1.2em;
	-moz-border-radius:10px;
	-webkit-border-radius:10px;
	border-radius:10px;
}

#sidebar h2 a, #sidebar h4 a:active {
	color:#FFFFFF;
	display:block;
	height:100%;
	width:100%;
}

#sidebar h2 a:hover {
	color:#333333;
}

#sidebar blockquote {
	margin: 0;
}
#sidebar img {
	display: block;
	background: #fff;
	padding: 4px;
	border: 1px solid #eee;
	border-right: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
}
#sidebar .rsswidget img {
	/* reset to default styles */
	display: inline;
	padding: 0;
	border: 0;
	margin: 0;
	/* hide because it's dumb */
	display: none;
}
/* search */
#searchform {
	margin: .25em 0 1em;
}
#sidebar #search h2 {
	display: none;
}
#sidebar #search input {
	width: 33%;
}
#sidebar #search input#s {
	width: 60%;
}
#sidebar #search br {
	display: none;
}
/* calendar */
#wp-calendar {
	background: transparent url("images/bg-sidebar-five-percent.png") top right;
	width: 100%;
}
#wp-calendar #today {
	font-weight: bold;
	background: transparent url("images/bg-sidebar-five-percent.png") top right;
}
#wp-calendar td,
#wp-calendar th {
	text-align: center;
	padding: .25em 0;
	color: #999;
}
#wp-calendar td a {
	font-weight: bold;
}
#wp-calendar caption {
	text-align: left;
	font-weight: bold;
}
/* tag cloud */
.st-tag-cloud,
.wp-tag-cloud {
	background: transparent url("images/bg-sidebar-five-percent.png") top right;
	padding: .5em .5em .5em 1em;
}
#sidebar .st-tag-cloud,
#sidebar .wp-tag-cloud {
	background: transparent url("images/bg-sidebar-five-percent.png") top right;
}
.st-tag-cloud li,
.wp-tag-cloud li {
	display: inline;
	margin: 0 .5em 0 0;
}
.st-tag-cloud li a,
.wp-tag-cloud li a {
	color: #555;
}
.st-tag-cloud li a:hover,
.wp-tag-cloud li a:hover,
.st-tag-cloud li a:focus,
.wp-tag-cloud li a:focus {
	color: #c00;
}
/* subscribe */
#subscribe-dojo p {
	margin: .25em 0;
}

/* twitter */
.twitter {
	margin: 0;
}
.twitter .twitter-item {
	list-style: none;
	background: transparent url("images/bg-sidebar-five-percent.png") top right;
	border-left: 2px solid #bbb;
	font-style: italic;
	margin: .25em 0 1em;
	padding: .75em 1em .75em;
}
.twitter .twitter-timestamp {
	display: block;
	font-size: .8em;
}

/* Footer -------------------------------------------------- */
#footer {
	border-top:1px solid #eee;
	float:left;
	width:100%;
	padding-top:10px;
}

#footer-left {
	float:left;
}

#footer-right {
	float:right;
}

#footer p {
	width: 50%;
	margin: 1em 0 0;
	
}

#footer .menu-footer, #footer .siteinfo {
	display:block;
	float:right;
	width:40%;
	text-align:right;
	height:27px;
	
}

#footer .siteinfo {
	width:90px;
}

#footer .siteinfo a {
	display:block;
	height:20px;
	width:90px;
	text-align:left;
}

#logins {
	clear:both;
	padding-bottom:5px;
	text-align:right;
}

#logins a {
color:#999;
text-decoration:underline;
}


#footer .copyright {
	float:left;
	width:60%;
	color:#999;
}

#footer ul.menu li a {
	font-size:0.9em;
	border-right:1px solid #eee;
}

 {
	display:block;
	position:relative;
	float:left;
	padding-bottom:20px;
	width:100%;
}

#actions .item {
	width:233px;
	float:left;
	display:block;
	position:relative;
	padding: 15px 30px;
	background-color:#88AA00;
	margin-left:20px;
	height:10em;
	border-radius:10px;
	-webkit-border-radius:10px;
	-moz-border-radius:10px;
}

#actions .item h2 {
	margin-bottom:0;
}

#actions .item strong {
	font-size:1.5em;
	font-weight:normal;
}

#actions div.item a.button {
	border:none;
	display:block;
}

#actions div.item.two {
	background-color:#FF9E13;
}

#actions div.item.three {
	background-color:#BD5546;
}

#actions .item h2 {
	color:#fff;
	font-weight:normal;
	font-size:32px;
}

a.button {
	-moz-border-radius-bottomleft:10px;
	-moz-border-radius-bottomright:10px;
	-moz-border-radius-topleft:10px;
	-moz-border-radius-topright:10px;
	background-color:#F68B1F;
	clear:both;
	color:#fff;
	display:inline;
	font-size:1.2em;
	text-transform:lowercase;
	font-weight:bold;
	margin-top:10px;
	padding-bottom:3px;
	padding-left:10px;
	padding-right:10px;
	padding-top:3px;
	text-decoration:none!important;
	
}

a.button:hover {
color:#333;
}




